<h1>Games</h1>

<h2>Your games</h2>
<% if @your_games.present? %>
  <ul>
    <% @your_games.each do |game| %>
      <li>
        <%= link_to game do %>
          #<%= game.id %> - <%= pluralize(game.players.length, 'player') %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>

<h2>Lobby</h2>
<ul>
  <% @games.each do |game| %>
    <li>
      <%= link_to game do %>
        #<%= game.id %> - <%= pluralize(game.players.length, 'player') %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= button_to 'New game', games_path %>
